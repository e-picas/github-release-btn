<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 20010904//EN" "http://www.w3.org/TR/2001/REC-SVG-20010904/DTD/svg10.dtd">
<svg version="1.1"
     baseProfile="full"
     xmlns="http://www.w3.org/2000/svg"
     xmlns:xlink="http://www.w3.org/1999/xlink"
     width="{{ full_width }}px" height="20px"
     id="button">
    <a xlink:href="{{ link }}" class="svg">
        <linearGradient id="a" x2="0" y2="100%">
            <stop offset="0" stop-color="#bbb" stop-opacity=".1" />
            <stop offset="1" stop-opacity=".1" />
        </linearGradient>
        <rect rx="3" width="100" height="100%" fill="#555" />
        <rect rx="3" x="{{ left_width }}" width="{{ right_width }}" height="100%" fill="#{{ color }}" />
        <path fill="#{{ color }}" d="M{{ separator_x }} 0h4v20h-4z" />
        <rect rx="3" width="{{ full_width }}" height="100%" fill="url(#a)" />
        <g fill="#fff" text-anchor="start" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
            <text x="7" y="15" fill="#010101" fill-opacity=".3">{{ title }}</text>
            <text x="7" y="14">{{ title }}</text>
            <text x="82.5" y="15" fill="#010101" fill-opacity=".3">{{ name }}</text>
            <text x="82.5" y="14" id="name">{{ name }}</text>
        </g>
    </a>
<style>
/* <![CDATA[ */
a.svg {
    text-decoration: none;
    position: relative;
    display: inline-block;
}
a.svg:after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left:0;
}
/* ]]> */
</style>
</svg>
